<Application x:Class="StarCatalog.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StarCatalog"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="ButtonStyleUniversal">
            <Setter Property="Control.Margin"  Value="20 10" />
            <Setter Property="Control.Padding" Value="10" />
            <Setter Property="Control.HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Control.VerticalAlignment" Value="Center" />
        </Style>
        <!-- Конец стиля для кнопок -->
    </Application.Resources>
</Application>
